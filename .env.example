# Database Configuration
POSTGRES_DB=mossbros
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# Application Configuration
# Options: development, production, test
NODE_ENV=development
PORT=4000
FRONTEND_URL=http://localhost:5173

# SMTP Configuration
# For development, use Mailtrap (https://mailtrap.io/)
# For production, use your email service provider
RESEND_API_KEY=re_xxxxxxxxx

# JWT Configuration
# Generate secure random strings for production
# Example: openssl rand -hex 32
JWT_SECRET=your_jwt_secret_here_minimum_32_characters
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here_minimum_32_characters

# Owner User Configuration
# This user is created automatically during database seeding (development only)
OWNER_NAME=Admin User
OWNER_EMAIL=admin@example.com
OWNER_PASSWORD=change_this_password
OWNER_PHONE=+1234567890

# Sentry Configuration (Optional but recommended)
# Sign up at https://sentry.io and create a project
SENTRY_DSN=https://your-sentry-dsn@sentry.io/your-project-id
SENTRY_ENVIRONMENT=production
