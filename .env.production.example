# Database Configuration - Production
# For DigitalOcean Managed Database or self-hosted PostgreSQL
POSTGRES_DB=mossbros_production
POSTGRES_USER=mossbros_user
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_32_CHARS_MIN
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Redis Configuration - Production
# Enable password authentication in production
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_STRONG_REDIS_PASSWORD

# Application Configuration - Production
NODE_ENV=production
PORT=4000
FRONTEND_URL=https://mossbrossv.com

# SMTP Configuration - Production
# Use a production email service: SendGrid, Mailgun, AWS SES, etc.
RESEND_API_KEY=re_xxxxxxxxx

# JWT Configuration - Production
# CRITICAL: Generate with: openssl rand -hex 64
# These MUST be different from development and MUST be kept secret
JWT_SECRET=GENERATE_WITH_OPENSSL_RAND_HEX_64_MINIMUM_64_CHARS
JWT_REFRESH_SECRET=GENERATE_WITH_OPENSSL_RAND_HEX_64_MINIMUM_64_CHARS_DIFFERENT

# Owner User Configuration - Production
# This is the initial admin user created on first deployment
# CHANGE these values before deploying to production
OWNER_NAME=Administrator
OWNER_EMAIL=admin@mossbrossv.com
OWNER_PASSWORD=CHANGE_ME_VERY_STRONG_PASSWORD
OWNER_PHONE=+50312345678

# Sentry Configuration (Optional but recommended)
# Sign up at https://sentry.io and create a project
SENTRY_DSN=https://your-sentry-dsn@sentry.io/your-project-id
SENTRY_ENVIRONMENT=production

# Additional Production Settings (Optional)
# Uncomment and configure as needed

# Enable if using a reverse proxy (nginx, caddy)
# TRUST_PROXY=true

# Rate limiting - Adjust based on your needs
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100

# Database connection pool settings
# DB_POOL_MIN=5
# DB_POOL_MAX=20

# Session settings
# SESSION_COOKIE_SECURE=true
# SESSION_COOKIE_HTTPONLY=true
# SESSION_COOKIE_SAMESITE=strict

# CORS settings - Add additional origins if needed
# ADDITIONAL_CORS_ORIGINS=https://app.mossbrossv.com,https://admin.mossbrossv.com
