{
  "name": "backend",
  "version": "1.0.0",
  "description": "Mossbros Backend",
  "keywords": [
    "PostgreSQL",
    "Express",
    "Redis",
    "TypeORM"
  ],
  "license": "ISC",
  "author": "Diego Pardo",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "seed": "ts-node src/database/seed.ts",
    "migration:generate": "typeorm-ts-node-commonjs migration:generate -d src/config/typeorm.ts",
    "migration:run": "typeorm-ts-node-commonjs migration:run -d src/config/typeorm.ts",
    "migration:revert": "typeorm-ts-node-commonjs migration:revert -d src/config/typeorm.ts",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@types/bcrypt": "^6.0.0",
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.7.2",
    "@types/nodemailer": "^7.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "eslint": "^9.37.0",
    "globals": "^16.4.0",
    "jiti": "^2.6.1",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.0"
  },
  "dependencies": {
    "@sentry/node": "^10.25.0",
    "@sentry/profiling-node": "^10.25.0",
    "bcrypt": "^6.0.0",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "nodemailer": "^7.0.9",
    "pg": "^8.16.3",
    "rate-limit-redis": "^4.2.3",
    "redis": "^5.8.3",
    "reflect-metadata": "^0.2.2",
    "resend": "^6.4.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.27",
    "winston": "^3.18.3"
  }
}
